<% provide(:title, @user.name) %>

<% content_for :sections do %>
  <section>
    <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h1>
  </section>
  <section>
    <%= render 'shared/stats' %>
  </section>
<% end %>

<% content_for :main do %>
  <%= render 'follow_form' if signed_in? %>
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
<% end %>
